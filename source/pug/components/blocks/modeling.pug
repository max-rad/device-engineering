mixin modeling(data)
  section.modeling
    if (data.background)
      .modeling__background
        +img("content", data.background.src, data.background.format, data.background.width, data.background.height, data.background.alt)
    .container
      .modeling__wrapper
        h2.title.title--h2.modeling__title!=data.title
        .modeling__content
          each item in data.content
            p!=item
          if (data.list)
            ul
              each item in data.list
                li!=item
