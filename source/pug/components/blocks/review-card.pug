mixin review-card(data)
  a.review-card(href="img/content/reviews/" + data.image.src + "." + data.image.format data-fancybox="reviews")
    .review-card__image
      +img("content/reviews", data.image.src, data.image.format, data.image.width, data.image.height, data.image.alt)
    h3.review-card__title!=data.title
